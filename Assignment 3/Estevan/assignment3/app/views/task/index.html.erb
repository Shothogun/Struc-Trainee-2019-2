<table>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= link_to('See details', task_path(task), class: "btn btn-info") %></td>
      <td><%= link_to('Edit', edit_task_path(task), class: "btn btn-dark") %></td>
      <td><%= link_to('Delete', task_path(task), class: "btn btn-danger", method: :delete) %></td>
    </tr>

  <% end %>
</table>