<div class="jumbotron bg-white">
  <div class="container">

    <!-- Formulario -->
    <%= form_with model: @task, local: true do |form| %>

      <!-- Primeiro campo do formulario -->
      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <!-- Segundo campo do formulario -->
      <div class="form-group">
        <%= form.label :description, "Descrição" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <!-- Terceiro campo do formulario -->
      <div class="form-group">
        <%= form.label :date_task, "Data" %>
        <%= form.datetime_field :date_task, class: "form-control" %>
      </div>

      <!-- Botao para envio do formulario -->
      <div class="text-center">
        <%= form.submit "Enviar Task", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>

