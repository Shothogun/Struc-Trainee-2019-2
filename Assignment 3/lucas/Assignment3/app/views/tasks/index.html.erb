

<link rel="stylesheet" type="text/css" href="index.css">

 
  <table> 
    <% @tasks.each do |task| %>
      <li class="padding-top">
        <%= task.title %>
        <%= link_to('Show', task_path(task), class:"btn btn-primary") %>
        <%= link_to('Edit', edit_task_path(task), class:"btn btn-warning") %>
        <%= link_to('Destroy', task_path(task), class:"btn btn-danger", method: :delete) %>
      </li>
    <% end %>
  </table>